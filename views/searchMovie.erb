<h1>Търсене на филм</h1>

<form method="get" action="/search_movie_by_person">
    <button type="submit" class="btn btn-default">Търсене по участие на човек</button>
</form>

<form method="post" action="/finish_search_movie">
    <div class="form-group">
        <label for="name-input">Име</label>
        <input id="name-input"
               class="form-control"
               name="movie_name"
               type="text"
               value=""
               placeholder="Movie name">
    </div>

    <div class="form-group">
        <label for="Year-input">Година</label>
        <input id="year-input"
                class="form-control"
                name="year"
                type="number"
                value=""
                placeholder="Year">
    </div>

    <div class="form-group">
        <label for="Length-input">Продължителност</label>
        <input id="length-input"
                class="form-control"
                name="length"
                type="number"
                step="0.01"
                value=""
                placeholder="Length">
    </div>

    <div class="form-group">
        <label for="Genre-input">Жанр</label>
        <input id="genre-input"
                class="form-control"
                name="genre"
                type="text"
                value=""
                placeholder="Genre">
    </div>

    <div class="form-group">
        <label for="Description-input">Описание</label>
        <textarea   id="description-input"
                	class="form-control"
                	name="description"
                	placeholder="Description"
                	value=""
                	rows="7"
                	cols="70"></textarea>
    </div>

    <button type="submit" class="btn btn-default">Търси</button>
</form>