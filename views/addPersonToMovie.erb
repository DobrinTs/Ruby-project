<h1>Добавяне на участник за филма "<%= @movie.name %>"</h1>

<form method="post" action="/finish_adding_person_to_movie/<%= @movie.name %>">
	<div class="form-group">
        <label for="name-input">Име на участника</label>
        <input id="name-input"
               class="form-control"
               name="person_name"
               type="text"
               placeholder="Person name"
               required>
    </div>

	<button type="submit" class="btn btn-default">Добавяне</button>
</form>