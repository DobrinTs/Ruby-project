<h1>База от данни за филми</h1>

<% if flash[:success] %>
    <p class="bg-success"><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
    <p class="bg-danger"><%= flash[:error] %></p>
<% end %>

<form method="post" action="/login">
    <div class="form-group">
        <label for="user-name-input">Име</label>
        <input id="user-name-input"
               class="form-control"
               name="user_name"
               type="text"
               placeholder="User name">
    </div>
    <div class="form-group">
        <label for="text-input">Парола</label>
        <input id="text-input"
                  class="form-control"
                  name="text"
                  placeholder="Password"></textarea>
    </div>

    <button type="submit" class="btn btn-default">Login</button>
</form>

<form method="post" action="/register">
    <button type="submit" class="btn btn-default">Register</button>
</form>

<form method="post" action="/lostpassword">
	<div class="form-group">
        <label for="user-name-input">Име</label>
        <input id="user-name-input"
               class="form-control"
               name="user_name"
               type="text"
               placeholder="User name">
    </div>
    <button type="submit" class="btn btn-default">Lost Password</button>
</form>