<h1>Добавяне на нов човек</h1>

<form method="post" action="/finish_person_creation">
	<div class="form-group">
        <label for="name-input">Име</label>
        <input id="name-input"
               class="form-control"
               name="person_name"
               type="text"
               placeholder="Person name"
               required>
    </div>

    <div class="form-group">
        <label for="name-input">Националност</label>
        <input id="name-input"
               class="form-control"
               name="nationality"
               type="text"
               placeholder="Nationality"
               required>
    </div>

    <div class="form-group">
        <label for="name-input">Рожден ден</label>
        <input id="name-input"
               class="form-control"
               name="birthday"
               type="text"
               placeholder="Birthday"
               required>
    </div>

<button type="submit" class="btn btn-default">Добавяне</button>
</form>